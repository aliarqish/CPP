// arr - input array
// n - size of array
// val - element to be searched

int linearSearch(int arr[], int n ,int val){
    
  	int i,pos=0,flag=0;
  while(n>=1 && n<=100000){
    

    for(i=0;i<n;i++){
        if(arr[i]==val){
          	flag=1;
            pos=i;
          break;
     }

    }
    if(flag==1){
      	return pos;
    }else
      return -1;
    
  }
    
}
