#include<iostream>
using namespace std;

int main(){
  int i,n,space,value,count;
  cin>>n;
  i=1;

  while(i<=n){
    space=1;

        while(space<=n-i){
                cout<<" ";
                space=space+1;
        }
        count=1;


            while(count<=i){
                cout<<"*";
                count=count+1;
            }
            value=2*i-2;
            while(value>=i){
                cout<<"*";
                value=value-1;
            }
            cout<<"\n";
            i=i+1;
  }
}
