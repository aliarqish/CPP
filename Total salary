#include<iostream>
using namespace std;

int main(){

        int allow,totalSalary;
        double basic,hra,da,pf;
        char grade;
        cin>>basic;
        cin>>grade;
        hra=0.2*basic;
        da=0.5*basic;
        pf=.11*basic;

    if(grade=='A'){
        allow=1700;
        }
        else if(grade=='B'){
            allow=1500;
        }
        else{
            allow=1300;
        }


        totalSalary=basic+hra+da+allow-pf+0.5;
        cout<<totalSalary;
}
