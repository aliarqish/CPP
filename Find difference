#include<iostream>
using namespace std;

int main(){
    int n,i,arr[1000000],sum1=0,sum2=0,diff;
    cin>>n;
  while(n>=1 && n<=1000000){
    for(i=0;i<n;i++){
        cin>>arr[i];
    if(arr[i]>=1 && arr[i]<=10000){
      if(i%2==0){
        sum1=sum1+arr[i];
      }
      else if(i%2!=0){
        sum2=sum2+arr[i];
      }
    }else{
        break;
    }
    }
    diff=sum1-sum2;
    cout<<diff<<endl;
    break;

  }


