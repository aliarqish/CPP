void sort(int arr[], int n)  {
    
     int i,count1=0,count2=0;
     for(i=0;i<n;i++){
        if(arr[i]==0)
            count1++;
    }
        count2=count1;
     for(i=0;i<n;i++){
        if(arr[i]==1){
            count2++;
        }
     }
        for(i=0;i<count1;i++){
            arr[i]=0;
        }
        for(i=count1;i<count2;i++){
            arr[i]=1;
        }
        for(i=count2;i<n;i++){
            arr[i]=2;
        }

}
